<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:animateLayoutChanges="true"
    >


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:animateLayoutChanges="true"

        >


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:contentDescription="star the calculation"
        android:src="@drawable/ic_star_lightgrey_24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:contentDescription="options"
        android:src="@drawable/ic_more_vert_lightgrey_24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="Calculation display"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>


    <android.support.v7.widget.CardView
        android:id="@+id/inputcard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-10dp"
        android:layout_weight="1"
        android:animateLayoutChanges="true"
        app:cardCornerRadius="10dp"
        app:cardElevation="9dp">

        <LinearLayout
            android:id="@+id/inputlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:animateLayoutChanges="true"
            android:orientation="vertical">


            <View
                android:id="@+id/view"
                android:layout_width="match_parent"


                android:layout_height="2dp"


                android:background="@color/lightgrey" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                >

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_centerInParent="true"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:src="@drawable/ic_more_horiz_black_24dp"

                    />

                <ToggleButton
                    android:id="@+id/inputlayoutminimizer"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_keyboard_arrow_down_black_24dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:textOff="@null"
                    android:textOn="@null" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/b1"
               >
                <ImageView
                    android:id="@+id/_0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="50dp"
                    android:padding="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/nine" />

                <ImageView
                    android:id="@+id/_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/_0"
                    android:padding="10dp"
                    android:layout_marginTop="50dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/eight" />

                <ImageView
                    android:id="@+id/_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:layout_toEndOf="@id/_1"
                    android:padding="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/seven" />

                <ImageView
                    android:id="@+id/_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/_0"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="20dp"
                    android:padding="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/six" />

                <ImageView
                    android:id="@+id/_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/_0"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="-2dp"
                    android:layout_toStartOf="@+id/_5"
                    android:layout_toEndOf="@id/_3"
                    android:padding="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/five" />

                <ImageView
                    android:id="@+id/_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/_1"
                    android:layout_marginTop="0dp"
                    android:layout_toEndOf="@+id/_1"
                    android:padding="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/four" />

                <ImageView
                    android:id="@+id/_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/_3"
                    android:layout_alignBottom="@+id/_7"
                    android:layout_marginStart="-240dp"
                    android:layout_marginEnd="1dp"
                    android:layout_marginBottom="0dp"
                    android:layout_toStartOf="@+id/_7"
                    android:layout_toEndOf="@id/_5"
                    android:padding="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/three" />

                <ImageView
                    android:id="@+id/_7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/_3"
                    android:layout_alignStart="@+id/_4"
                    android:layout_alignParentEnd="false"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="2008dp"
                    android:padding="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/two" />

                <ImageView
                    android:id="@+id/_8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/_3"
                    android:layout_alignBottom="@+id/_9"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="-2dp"
                    android:layout_marginEnd="124dp"
                    android:layout_marginBottom="82dp"
                    android:layout_toEndOf="@+id/_1"
                    android:padding="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/one" />

                <ImageView
                    android:id="@+id/_9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/_6"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="100dp"
                    android:layout_marginTop="-2dp"
                    android:padding="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/zero" />

                <ImageView
                    android:id="@+id/_plus"
                    android:layout_width="55dp"
                    android:layout_height="75dp"
                    android:layout_below="@+id/_6"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="286dp"
                    android:layout_marginTop="-237dp"
                    android:padding="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/plus" />

                <ImageView
                    android:id="@+id/_minus"
                    android:layout_width="55dp"
                    android:layout_height="75dp"
                    android:layout_below="@+id/_6"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="286dp"
                    android:layout_marginTop="-162dp"
                    android:padding="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/minus" />

                <ImageView
                    android:id="@+id/_equals"
                    android:layout_width="80dp"
                    android:layout_height="75dp"
                    android:layout_below="@+id/_6"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="271dp"
                    android:layout_marginTop="64dp"
                    android:padding="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/equal" />

                <ImageView
                    android:id="@+id/_multiply"
                    android:layout_width="55dp"
                    android:layout_height="75dp"
                    android:layout_below="@+id/_6"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="286dp"
                    android:layout_marginTop="-86dp"
                    android:padding="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/multiply" />

                <ImageView
                    android:id="@+id/divide"
                    android:layout_width="55dp"
                    android:layout_height="75dp"
                    android:layout_below="@+id/_6"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="284dp"
                    android:layout_marginTop="-11dp"
                    android:padding="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/divide" />

                <ImageView
                    android:id="@+id/dot"
                    android:layout_width="35dp"
                    android:layout_height="45dp"
                    android:layout_below="@+id/_6"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="205dp"
                    android:layout_marginTop="22dp"
                    android:padding="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/dot" />

                <ImageView
                    android:id="@+id/back"
                    android:layout_width="55dp"
                    android:layout_height="75dp"
                    android:layout_below="@+id/_6"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="33dp"
                    android:layout_marginTop="1dp"
                    android:padding="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/back" />


            </RelativeLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>





</LinearLayout>