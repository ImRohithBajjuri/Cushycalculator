<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:animateLayoutChanges="true"

    >


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="2"
        android:animateLayoutChanges="true"


        >


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:contentDescription="star the calculation"
            android:src="@drawable/ic_star_lightgrey_24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:contentDescription="options"
        android:src="@drawable/ic_more_vert_lightgrey_24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


        <EditText
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:inputType="number"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:background="@null"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>




    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="10dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_attach_money_black_24dp"
                android:layout_margin="10dp"
                android:id="@+id/openscientific"
                android:contentDescription="Scientific options"
                android:clickable="true"
                android:focusable="true"
                />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/DarkGrey"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="other options..."
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:textSize="15sp"
                android:textColor="@color/DarkGrey"
                />


        </LinearLayout>

    </android.support.v7.widget.CardView>






   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_weight="2"
       android:orientation="horizontal"
       android:animateLayoutChanges="true"

       >


       <android.support.v7.widget.CardView
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:id="@+id/inputnumberscard"
           app:cardElevation="6dp"
           app:cardBackgroundColor="@color/white"
           app:cardCornerRadius="10dp"
           android:layout_marginTop="5dp"
           android:layout_marginBottom="5dp"
           android:layout_marginStart="5dp"
           android:layout_marginEnd="4dp"
           android:layout_weight="1"

           android:animateLayoutChanges="true"

           >


           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:id="@+id/scientificInputOptions"
               android:orientation="vertical"
               android:animateLayoutChanges="true"
               >
               <ImageView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/ic_arrow_back_black_24dp"
                   android:layout_margin="10dp"
                   android:layout_alignParentStart="true"
                   android:layout_alignParentTop="true"
                   android:id="@+id/closescientific"
                   android:contentDescription="close scientific options"
                   android:clickable="true"
                   android:focusable="true" />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Scientific input (to be added) "
                   android:textColor="@color/DarkGrey"
                   android:textSize="20sp"
                   android:fontFamily="@font/roboto_medium"
                   android:layout_gravity="center"
                   android:layout_centerInParent="true"/>

           </RelativeLayout>






           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="vertical"
               android:id="@+id/inputnumberslayout"
               android:animateLayoutChanges="true">

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:layout_weight="1"
                   android:gravity="center"
                   >

                   <TextView
                       android:id="@+id/num7"
                       android:layout_width="wrap_content"
                       android:layout_height="match_parent"
                       android:layout_weight="1"
                       android:fontFamily="@font/roboto_medium"
                       android:gravity="center"
                       android:text="7"
                       android:textColor="@color/black"
                       android:textSize="32sp"
                       android:clickable="true"
                       android:focusable="true"
                       android:background="?selectableItemBackground"/>

                   <TextView
                       android:id="@+id/num8"
                       android:layout_width="wrap_content"
                       android:layout_height="match_parent"
                       android:layout_weight="1"
                       android:fontFamily="@font/roboto_medium"
                       android:gravity="center"
                       android:text="8"
                       android:textColor="@color/black"
                       android:textSize="32sp"
                       android:clickable="true"
                       android:focusable="true"
                       android:background="?selectableItemBackground"/>

                   <TextView
                       android:id="@+id/num9"
                       android:layout_width="wrap_content"
                       android:layout_height="match_parent"
                       android:layout_weight="1"
                       android:fontFamily="@font/roboto_medium"
                       android:gravity="center"
                       android:text="9"
                       android:textColor="@color/black"
                       android:textSize="32sp"
                       android:clickable="true"
                       android:focusable="true"
                       android:background="?selectableItemBackground"/>

               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"

                   android:layout_weight="1"
                   android:gravity="center">

                   <TextView
                       android:id="@+id/num4"
                       android:layout_width="wrap_content"
                       android:layout_height="match_parent"
                       android:layout_weight="1"
                       android:fontFamily="@font/roboto_medium"
                       android:gravity="center"
                       android:text="4"
                       android:textColor="@color/black"
                       android:textSize="32sp"
                       android:clickable="true"
                       android:focusable="true"
                       android:background="?selectableItemBackground"/>

                   <TextView
                       android:id="@+id/num5"
                       android:layout_width="wrap_content"
                       android:layout_height="match_parent"
                       android:layout_weight="1"
                       android:fontFamily="@font/roboto_medium"
                       android:gravity="center"
                       android:text="5"
                       android:textColor="@color/black"
                       android:textSize="32sp"
                       android:clickable="true"
                       android:focusable="true"
                       android:background="?selectableItemBackground"/>

                   <TextView
                       android:id="@+id/num6"
                       android:layout_width="wrap_content"
                       android:layout_height="match_parent"
                       android:layout_weight="1"
                       android:fontFamily="@font/roboto_medium"
                       android:gravity="center"
                       android:text="6"
                       android:textColor="@color/black"
                       android:textSize="32sp"
                       android:clickable="true"
                       android:focusable="true"
                       android:background="?selectableItemBackground"/>

               </LinearLayout>



               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"

                   android:layout_weight="1"
                   android:gravity="center">

                   <TextView
                       android:id="@+id/num1"
                       android:layout_width="wrap_content"
                       android:layout_height="match_parent"
                       android:layout_weight="1"
                       android:fontFamily="@font/roboto_medium"
                       android:gravity="center"
                       android:text="1"
                       android:textColor="@color/black"
                       android:textSize="32sp"
                       android:clickable="true"
                       android:focusable="true"
                       android:background="?selectableItemBackground"/>

                   <TextView
                       android:id="@+id/num2"
                       android:layout_width="wrap_content"
                       android:layout_height="match_parent"
                       android:layout_weight="1"
                       android:fontFamily="@font/roboto_medium"
                       android:gravity="center"
                       android:text="2"
                       android:textColor="@color/black"
                       android:textSize="32sp"
                       android:clickable="true"
                       android:focusable="true"
                       android:background="?selectableItemBackground"/>

                   <TextView
                       android:id="@+id/num3"
                       android:layout_width="wrap_content"
                       android:layout_height="match_parent"
                       android:layout_weight="1"
                       android:fontFamily="@font/roboto_medium"
                       android:gravity="center"
                       android:text="3"
                       android:textColor="@color/black"
                       android:textSize="32sp"
                       android:clickable="true"
                       android:focusable="true"
                       android:background="?selectableItemBackground"/>

               </LinearLayout>


               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"

                   android:layout_weight="1"
                   android:gravity="center">

                   <ImageView
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"

                       android:id="@+id/deletetyped"
                       android:layout_weight="1"

                       android:clickable="true"
                       android:focusable="true"
                       android:src="@drawable/ic_chevron_left_black_24dp"
                       />

                   <TextView
                       android:id="@+id/num0"
                       android:layout_width="0dp"
                       android:layout_height="match_parent"
                       android:layout_weight="1"
                       android:fontFamily="@font/roboto_medium"
                       android:gravity="center"
                       android:text="0"
                       android:textColor="@color/black"
                       android:textSize="32sp"
                       android:clickable="true"
                       android:focusable="true"
                       android:background="?selectableItemBackground"/>

                   <TextView
                       android:id="@+id/dot"
                       android:layout_width="0dp"
                       android:layout_height="match_parent"
                       android:layout_weight="1"
                       android:fontFamily="@font/roboto_medium"
                       android:gravity="center"
                       android:text="."
                       android:textColor="@color/black"
                       android:textSize="32sp"
                       android:clickable="true"
                       android:focusable="true"
                       android:background="?selectableItemBackground"/>

               </LinearLayout>



           </LinearLayout>






       </android.support.v7.widget.CardView>





       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="match_parent"


           android:animateLayoutChanges="true"
           android:orientation="vertical"
           android:id="@+id/inputoperatorsparent">






       <android.support.v7.widget.CardView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/inputoperatorscard"
           app:cardElevation="6dp"
           app:cardBackgroundColor="@color/white"
           app:cardCornerRadius="10dp"
           android:layout_weight="1"


           android:layout_marginEnd="5dp"
           android:layout_marginBottom="3dp"
           android:layout_marginTop="5dp"
           android:layout_marginStart="2dp"


           android:animateLayoutChanges="true">













               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:orientation="vertical"
                   android:id="@+id/inputoperatorslayout"
                   android:animateLayoutChanges="true">



                   <ImageView
                       android:layout_width="match_parent"
                       android:layout_height="0dp"
                       android:src="@drawable/ic_divide"
                       android:id="@+id/dividevalue"
                       android:background="?selectableItemBackground"

                       android:layout_weight="1"
                       android:layout_gravity="center"
                       android:clickable="true"
                       android:focusable="true"
                       android:scaleType="center"
                       android:maxWidth="20dp"
                          />


                   <ImageView
                       android:layout_width="match_parent"
                       android:layout_height="0dp"
                       android:src="@drawable/ic_clear_black_24dp"
                       android:id="@+id/multiplyvalue"
                       android:background="?selectableItemBackground"

                       android:layout_weight="1"
                       android:layout_gravity="center"
                       android:clickable="true"
                       android:focusable="true"
                       android:scaleType="center"
                       />


                   <ImageView
                       android:layout_width="match_parent"
                       android:layout_height="0dp"
                       android:src="@drawable/ic_add_black_24dp"
                       android:id="@+id/addvalue"
                      android:background="?selectableItemBackground"
                       android:layout_weight="1"
                       android:layout_gravity="center"
                       android:clickable="true"
                       android:focusable="true"
                       android:scaleType="center"
                       />

                   <ImageView
                       android:layout_width="match_parent"
                       android:layout_height="0dp"
                       android:src="@drawable/ic_remove_black_24dp"
                       android:id="@+id/removevalue"
                       android:background="?selectableItemBackground"

                       android:layout_weight="1"
                       android:layout_gravity="center"
                       android:clickable="true"
                       android:focusable="true"
                       android:scaleType="center"
                       />












               </LinearLayout>




       </android.support.v7.widget.CardView>



           <android.support.v7.widget.CardView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               app:cardElevation="6dp"
               app:cardBackgroundColor="@color/DarkBlue"
               app:cardCornerRadius="10dp"
               android:layout_marginEnd="5dp"
               android:layout_marginBottom="5dp"
               android:layout_marginTop="3dp"
               android:layout_marginStart="2dp"
               android:layout_weight="0"
               android:id="@+id/inputequatecard"
               android:clickable="true"
               android:focusable="true"
               >
               <ImageView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@mipmap/equals"
                   android:id="@+id/equatevalue"
                   android:layout_margin="8dp"


                   android:layout_gravity="center"
                   android:tint="@color/white"/>
           </android.support.v7.widget.CardView>


       </LinearLayout>


   </LinearLayout>




</LinearLayout>